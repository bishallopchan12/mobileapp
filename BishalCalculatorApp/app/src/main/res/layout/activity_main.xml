<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/enter_the_value"
        android:textAlignment="textEnd"
        android:textColor="@color/purple"
        android:textSize="60sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <TextView

        app:layout_constraintBottom_toTopOf="@id/componentView"
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="60sp"
        android:textColor="@color/purple"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@+id/solution_tv"


         />

    <LinearLayout
        android:id="@+id/componentView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="C"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="("
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="10dp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_close_bracket"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text=")"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="@color/blue"
                android:text="AC"
                android:textSize="21sp"
                app:cornerRadius="36dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="9"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="8"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="10dp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="7"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="10dp"
                android:text="รท"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="6"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="5"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                android:layout_marginHorizontal="10dp"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton

                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:text="4"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="10dp"
                android:text="*"
                android:textSize="32sp"
                android:backgroundTint="@color/blue"
                app:cornerRadius="32dp" />
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_3"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="3"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_2"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="2"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            android:layout_marginHorizontal="10dp"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_1"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="1"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_subtract"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:text="-"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp" />
    </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_0"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="0"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_dot"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="."
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            android:layout_marginHorizontal="10dp"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_add"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="+"
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_equals"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginStart="10dp"
            android:text="="
            android:textSize="32sp"
            android:backgroundTint="@color/blue"
            app:cornerRadius="32dp" />
    </LinearLayout>



    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>